<Window x:Class="GreenThumb.AddPlantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreenThumb"
        mc:Ignorable="d"
        Title="AddPlantWindow" Height="450" Width="800" Background="PaleGreen">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Label
            Content="Add-A-Plant!"
            Grid.Row="1"
            Grid.Column="2"
            FontSize="40"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"/>

        <Label
            Content="Plant"
            Grid.Row="2"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="25"/>

        <Label
            Content="Instructions"
            Grid.Row="4"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="25"/>

        <Label
            Grid.Row="3"
            Grid.Column="1"
            Content="Description"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="25"/>

        <TextBox
            Name="txtDesc"
            Grid.Row="3"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Height="30"
            Margin="10"/>

        <TextBox
            Name="txtPlant"
            Grid.Row="2"
            Grid.Column="2"           
            Height="30"
            Margin="10"/>

        <ListView
            Name="lstInstructions"
            Grid.Row="4"
            Grid.Column="2"
            Grid.RowSpan="2"
            Margin="10"
            />

        <Button
            Grid.Column="3"
            Grid.Row="5"
            Margin="40 20 40 20"
            Content="Add Plant"
            FontSize="20"
            Background="LawnGreen" Click="btn_AddPlant"/>

    </Grid>
</Window>
